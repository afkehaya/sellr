source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.4'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'

gem 'devise'
gem 'pundit'
gem 'factory_girl_rails'

# Use postgresql as the database for Active Record
gem 'pg', '~> 0.15'
gem 'paper_trail'

gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

group :development, :test do
  gem 'byebug'
  gem 'rspec-rails', '~> 3.4'
  gem 'faker'
  gem 'guard-rspec', require: false
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'better_errors'
  gem 'letter_opener'
  gem 'pry-rails'
  # gem 'rack-livereload'
  gem 'rubocop', '~> 0.40.0', require: false
  gem 'capybara'
end

group :production do
  gem 'unicorn'
end
