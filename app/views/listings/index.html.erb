<% end %>

<div class="listings container">
  <div id="listings-container" class="transitions-enabled">
    <p id="notice"><%= notice %></p>

    <h1>Merchants</h1>


        <% @listings.each do |listing| %>
          <div class="box panel panel-default box-sizer">
            <div class="listing-box-image">
              <%= image_tag listing.image.url(:large), class: "listing-image" %>
            </div>

              <div class="panel-body">
              <div class="actions">
                <p><%= listing.name %></p>
                <p> <%= listing.commission %>%/ Month</p>
                <p> $<%= listing.value %> / Month</p>

                <%= link_to 'View Listing', listing %>
                <%= link_to 'Edit', edit_listing_path(listing), class:"glyphicon glyphicon-edit" if user_signed_in? && current_user.merchant? %>
                <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class:"glyphicon glyphicon-trash" if user_signed_in? && current_user.merchant?  %>

              </div>
             </div>
            </div>
         <% end %>

    <br>

        <%= link_to 'New Listing', new_listing_path, class: "btn btn-lg btn-warning" if user_signed_in? && current_user.merchant? %>
      </div>
    </div>
