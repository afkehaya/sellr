<div class="listings container">

  <div id="listings-container" class="transitions-enabled infinite-scroll clearfix masonry centered">
    <p id="notice"><%= notice %></p>

    <h1>Merchants</h1>


        <% @listings.each do |listing| %>

          <div class="box panel panel-default">
            <%= image_tag("defaultimage.png", :alt => "default") %>
              <div class="panel-body">
              <div class="actions">
                <p><strong>Company:</strong>MailChimp</p>
                <p> 30% / Month</p>
                <p> 20$ / Month</p>

                <%= link_to 'Sell', listing, class:"glyphicon glyphicon-usd" %>
                <%= link_to 'Edit', edit_listing_path(listing), class:"glyphicon glyphicon-edit" %>
                <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class:"glyphicon glyphicon-trash" %>

              </div>
             </div>
            </div>
        <% end %>
    </div>

    <br>

    <%= link_to 'New Listing', new_listing_path, class: "btn btn-lg btn-warning" %>
  </div>
