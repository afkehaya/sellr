<%= javascript_include_tag "increment_listing_count" %>

<div class="container">
    <div class="listing-jumbo">
      <div class="jumbotron">
        <p id="notice"><%= notice %></p>
          <div class="row">

            <div class="col-md-6">
              <h2><%= @listing.name %></h2>
              <h3><span id="sale_count"><%= @listing.sale_count %></span> selling this product</h3>
              <%= image_tag @listing.image.url(:large) %>
              <div class="btn-listing">
                  <a id="listing_link" href="<%= @listing.product_url %>" target="_blank" class="btn btn-lg btn-warning" data-internalid="<%= @listing.id %>">Sell This Product</a>
              </div>
            </div>
            <div class="col-md-6">
              <h3> <strong>Commission:</strong> <%= @listing.commission %>%</h3>
              <h3> <strong>Value Per Month</strong> $<%= @listing.value %></h3>
              <p><strong>Description:</strong> <%= @listing.description %></p>
           </div>
          <div class="listing-back-link">
          <% if user_signed_in? && current_user.merchant %>
            <%= link_to 'Edit', edit_listing_path(@listing) %> |
          <% end %>
          <%= link_to 'Back', listings_path %>
          </div>
       </div>
      </div>
    </div>
  </div>
